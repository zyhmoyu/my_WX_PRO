/* pages/regist/regist.wxss */
.login1{
	position: relative;
  z-index: 1;
}
.loginbg{
	width: 100%;
	height: 1215.5rpx;
	position: fixed;
	left: 0;
  bottom: 0;
	/* z-index: 1; */
}
.login1_2{
	position: absolute;
	z-index: 12;
	/* margin: auto; */
	font-size: 13px;
	font-weight: bold;
	width: 480rpx;
	/* margin-top: 800rpx; */
	top: 400rpx;
	left: 50%;
	transform: translateX(-50%);
}
.login1_2>view{
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: space-between;
	width: 500rpx;
}
.login1_2>view+view{
	margin-top: 40rpx;
}
.login1_2_3,
.login1_2 input{
	background: #FFFFFF;
	border-radius: 10rpx;
	font-size: 12px;
	font-weight: lighter;
	padding: 10rpx;
	box-sizing: border-box;
	border: 1rpx solid #efefef;
	width: 415rpx;
	/* margin-left: 15rpx; */
}
.login1_2_3{
	width: 414rpx;
	height: 52.5rpx;
}
.regist::after{
  border: none;
}
.regist{
	position: absolute;
	top: 700rpx;
	z-index: 12;
	display: inline-block;
	width: 500rpx;
	padding: 10rpx 0;
	border-radius: 10rpx;
	color: #FFFFFF;
	text-align: center;
	font-size: 14px;
	background: #EA1D10;
	left: 50%;
	transform: translateX(-50%);
	margin-left: 5rpx;
	line-height: 1.5;
}